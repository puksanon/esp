<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet">
    <title><%= header %></title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/new.css">
    </head>
    <body>
            <%include ./partials/navbar.ejs %>
            <div class="container" style="position:relative; margin:auto ; margin-top: 150px; color:white;" >
                <div class="text-center" style="margin-bottom:10%;">
                    <h1><%= header %></h1>
                    <HR>
                    <%include ./partials/messages %>
                </div>
                <form 
                      action='/content/community/edit/<%= post.gametype%>/<%= post._id %>' 
                      method='post' 
                      encType="multipart/form-data">

                      <div class="form-group">
                            <label for="title">title</label>
                            <input
                            
                              type="title"
                              id="title"
                              name="title"
                              class="form-control"
                              value="<%= post.title %>"
                            />
                          </div>
        
                          <label for="gametype">gametype</label>
                          <div class="input-group mb-3">
                              <select class="custom-select"type="gametype" name="gametype" id="gametype"  style="background-color: black">
                                <option selected ><%= post.gametype %></option>
                                <option  id="gametype" type="gametype" name="gametype" value="dota">DOTA</option>
                                <option  id="gametype" type="gametype" name="gametype" value="csgo">CSGO</option>
                                <option  id="gametype" type="gametype" name="gametype" value="rov">ROV</option>
                                <option  id="gametype" type="gametype" name="gametype" value="overwatch">OVERWATCH</option>
                                <option  id="gametype" type="gametype" name="gametype" value="LOL">LOL</option>
                                <option  id="gametype" type="gametype" name="gametype" value="HON">HON</option>
                              </select>
                              <div class="input-group-append">
                                <label class="input-group-text" for="inputGroupSelect02">Game</label>
                              </div>
                            </div>
        
                          <div class="form-group">
                            <label for="description">description</label>
                            <input
                            
                              type="description"
                              id="description"
                              name="description"
                              class="form-control"
                              placeholder="Enter description"
                              value="<%=post.description%>"
                            />
                          </div>
                          <!-- <div class="form-group">
                            <input 
                                type="file" 
                                name="image"
                                value="<%= post.imagepath %>"
                                />
                          </div> -->

                  <input type="submit" value="Submit" class="btn btn-edit" style="display: block;margin:auto;margin-top:20px;width: 20%;border-radius: 30px;">

            </form>     
            <a href="/content/community/<%= post.gametype %>" class="btn btn-delete" style="display: block;margin:auto;margin-top:20px;width: 20%;border-radius: 30px;">Back to Community</a>
            </div>
            <% include footer.ejs  %>
                <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    </body>
</html>       