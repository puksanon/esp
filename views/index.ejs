    <link href="https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="crossorigin="anonymous"></script>
    <title>KMUTT-welcome</title>
    <link rel="stylesheet" type="text/css" href="/css/loading.css">
    <script src="/js/loading.js"></script>
    
    <style>
    .text{
        position: relative;
        text-align: center;
        top: 25vh;
        color: white;
        display: block;
    }

    h1{
        padding: 8px;
        font-size: 60px;      
    }

    p{
        font-size: 24px;
    }

    html, body{
	height: 100%;
	width: 100%;
	margin: 0;
	padding: 0;
	font-family: 'Inconsolata', monospace;
	background: #FFB162;
    }

    a:before{
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: -100%;
    background: linear-gradient(to right, #FFB162,#ffffff);
    transition: 0.5s;
    transition-delay: 0.5s;
    }

    a:hover:before{
    left: 100%;
    background: linear-gradient(to left, #ffffff,#FFB162);
    }

    a{
    top: 50vh;
    justify-content: center;
    position: relative;
    display: block;
    padding: 20px 30px;
    text-transform: uppercase;
    text-decoration: none;
    color: #fff;
    font-size: 28px;
    letter-spacing: 5px;
    text-align: center;
    overflow: hidden;
    margin-bottom: 40px;
        margin-left: 50px;
    }

    a span:nth-child(odd){
    position: absolute;
    display: block;
    width: 80%;
    height: 1px;
    background: #fff;
    transition: 0.5s ease-in-out;
    }

    a span:nth-child(1){
    top: 0;
    left: 50%;
    }

    a span:nth-child(3){
    bottom: 0;
    right: 50%;
    }

    a:hover span:nth-child(1){
    top: 0;
    left: -50%;
    background: linear-gradient(to left, #ffffff,#000000);
    }

    a:hover span:nth-child(3){
    bottom: 0;
    right: -50%;
    background: linear-gradient(to left, #ffffff,#000000);
    }

    a span:nth-child(even){
    position: absolute;
    display: block;
    width: 1px;
    height: 100%;
    background: #fff;
    transition: 0.5s ease-in-out;
    }

    a span:nth-child(2){
    top: 50%;
    left: 0;
    }

    a span:nth-child(4){
    bottom: 50%;
    right: 0;
    }

    a:hover span:nth-child(2){
    top: -50%;
    left: 0;
    background: linear-gradient(to left, #ffffff,#000000);
    }

    a:hover span:nth-child(4){
    bottom: -50%;
    right: 0;
    background: linear-gradient(to left, #ffffff,#000000);
    }

    

    </style>
  </head>
  <body>

    <div class="content">
      <div class="container">
          <div class="loader">
              <div class="bar1"></div>
              <div class="bar2"></div>
              <div class="bar3"></div>
